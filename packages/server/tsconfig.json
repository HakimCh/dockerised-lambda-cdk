{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "src/*",
                "src/app/*",
                "src/app/graphql/*"
            ],
            "@/*": [
                "test/*",
                "src/migration-v1-to-v2/*"
            ]
        },
        "resolveJsonModule": true,
        "sourceMap": true,
        "jsx": "react-jsx"
    },
    "extends": "@tsconfig/node16/tsconfig.json",
    "include": [
        "./src/**/*"
    ]
}